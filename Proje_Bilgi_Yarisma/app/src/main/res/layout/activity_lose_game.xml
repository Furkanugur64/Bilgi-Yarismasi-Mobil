<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_300sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:background="#B10404"
    app:cardBackgroundColor="#340A80"
    android:layout_gravity="center"
    tools:context=".time_out_dialog">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yanlış Cevap Verdiniz !!"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/wrong"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/btn_repeat"
            android:layout_height="@dimen/_35sdp"
            android:background="#44bd32"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tekrar Oyna"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"

                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/btn_menu"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/red"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Menü"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="20dp"

                />

        </LinearLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>